	If resultString = Null OR resultString = "[]" Then
		lblWrongDetails.Visible = True
		
	txtPass.Text = ""
				txtUsername.Text = ""
				txtUsername.RequestFocus
	
	Else If okToParse Then
	   'begin JSON Parsing
	
		Dim Jp As JSONParser
